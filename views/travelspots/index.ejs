<% layout('layouts/boilerplate') %>

<!-- Cluster Map -->
<div id="cluster-map" class="mb-3"></div>

<div class="form-outline mt-5" data-mdb-input-init>
  <input type="search" id="form1" class="form-control" placeholder="Type query" aria-label="Search" />
</div>

<section class="container mt-5 mb-5">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="fw-bold">All Travel Spots</h1>
    <a href="/travelspots/create" class="btn btn-success">+ Add New</a>
  </div>
  <hr />

  <div class="row row-cols-1 row-cols-md-2 g-4">
    <% for(let spots of travelspots){ %>
    <div class="col">
      <div class="card h-100 shadow-sm border-0 rounded-3 overflow-hidden">
        <div class="row g-0 h-100">
          <!-- Left: Image -->
          <div class="col-md-4">
            <a href="/travelspots/<%= spots.id %>">
              <img
                src="<%= spots.images.length > 0 ? spots.images[0].url : '/images/default.jpg' %>"
                class="img-fluid h-100 w-100 object-fit-cover"
                alt="<%= spots.title %>"
              />
            </a>
          </div>

          <!-- Right: Information -->
          <div class="col-md-8">
            <div class="card-body d-flex flex-column h-100">
              <div>
                <h5 class="card-title mb-2"><%= spots.title %></h5>
                <p class="card-text text-truncate-3"><%= spots.description %></p>
                <p class="card-text mb-1">
                  <small class="text-muted"><i class="bi bi-geo-alt"></i> <%= spots.location %></small>
                </p>
              </div>
              <div class="mt-auto">
                <a href="/travelspots/<%= spots.id %>" class="btn btn-sm btn-primary">Show Details</a>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <% } %>
  </div>
</section>

<script>
  const map_key = "<%- process.env.MAP_TILER_KEY %>";
  const travelspots = { features: <%- JSON.stringify(travelspots) %> };
</script>

<script src="/js/map_cluster.js"></script>
<script src="/js/infinite_scroll_index.js"></script>
